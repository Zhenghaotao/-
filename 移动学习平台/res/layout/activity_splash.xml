<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <!-- android:shadowRadius="1" 半径 -->

    <TextView
        android:id="@+id/tv_splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#ff0000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="移动学习平台"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_splash_app_name"
        android:shadowColor="#ff0000"
        android:layout_centerHorizontal="true"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="version1.0"
        android:shadowRadius="1"
        android:textColor="#ff000000"
        android:textSize="16sp" />
    <com.gdufs.studyplatform.ui.LoadingView
        android:id="@+id/lv_loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"    
        android:layout_below="@id/tv_splash_version"
        android:src="@drawable/loader_frame_1" 
        >
        
    </com.gdufs.studyplatform.ui.LoadingView>
    
    <TextView
	    android:visibility="gone"
	    android:id="@+id/tv_update_info"
	    android:textColor="#000000"
	    android:textSize="22sp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="升级进度:0%" 
       />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:background="@drawable/listview_selector_bg"
     android:paddingBottom="10.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="8.0dip"
    >
    <ImageView 
        android:id="@+id/iv_fileIcon"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dip"
        android:paddingTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_downloading"
        />
    <TextView 
        android:id="@+id/tv_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fileIcon"
        android:layout_marginLeft="15dip"
        android:textSize="15sp"
        android:text="filename"
        android:layout_marginTop="5dip"
        android:textColor="#ff000000"
        />
    <TextView 
        android:id="@+id/tv_uploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fileIcon"
        android:layout_marginLeft="15dip"
        android:layout_below="@id/tv_filename"
        android:textSize="15sp"
        android:text="uploader"
        android:textColor="#dd000000"
        android:layout_marginTop="2dip"
        />
    <TextView 
        android:id="@+id/tv_uploadtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fileIcon"
        android:layout_marginLeft="15dip"
        android:layout_below="@id/tv_uploader"
        android:textSize="15sp"
        android:text="uploader"
        android:textColor="#aa000000"
        android:layout_marginTop="2dip"
        />
    
    <Button 
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
    <TextView 
        android:id="@+id/tv_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_download"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dip"
        android:text="process"
        android:visibility="gone"
        />
    <TextView 
        android:id="@+id/tv_downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/downloaded"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:visibility="gone"
        />
    
    
    

</RelativeLayout>
